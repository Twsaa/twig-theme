{% if authUser %}
    <button type="submit" class="btn btn-lg btn-primary buynow" {{ product.saleable ? '' : 'disabled' }}>
        {{ ('shop::app.products.buy-now'|trans) }}
    </button>
{% else %}
    <button type="button" class="btn btn-lg btn-primary" data-toggle="modal" data-target="#customerLoginModal">
        {{ ('shop::app.products.buy-now'|trans) }}
    </button>
{% endif %}